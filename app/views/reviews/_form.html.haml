= form_with(model: [@book, review]) do |form|
  - if review.errors.any?
    #error_explanation
      %h2
        = pluralize(review.errors.count, "error")
        prohibited this review from being saved:
      %ul
        - review.errors.each do |error|
          %li= error.full_message
  .field
    = form.label :body
    = form.text_area :body
  .actions
    = form.submit
