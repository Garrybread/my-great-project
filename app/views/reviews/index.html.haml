%p#notice= notice
%h1 Reviews
%table
  %thead
    %tr
      %th Body
      %th Book
      %th{:colspan => "3"}
  %tbody
    - @reviews.each do |review|
      %tr
        %td= review.body
        %td= review.book.title
        %td= link_to 'Show Book', [@book]
        %td= link_to 'Edit Review', edit_book_review_path(@book, review)
        %td= link_to 'Destroy Review', [@book, review], method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Review', new_book_review_path(@book)
